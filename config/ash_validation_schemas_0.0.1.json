{
  "openapi": "3.0.1",
  "info": {
    "title": "SENG365 Auction API",
    "description": "Ashs schema version, for validating against. (I didnt create the API)",
    "version": "0.0.1",
    "termsOfService": "none",
    "contact": {
      "name": "SENG365 Auction API",
      "url": "none",
      "email": "ashley.williams@pg.canterbury.ac.nz"
    },
    "license": {
      "name": "none",
      "url": "none"
    }
  },
  "servers": [
    {
      "url": "/api/v1",
      "description": "Current version"
    }
  ],
  "paths": {
    "/auctions": {
      "post": {
        "security": [
          {
            "User": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostAuction"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/id"
                }
              }
            }
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/auctions/{id}": {
      "patch": {
        "security": [
          {
            "User": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/id"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Auction"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK"
          },
          "400": {
            "description": "Bad request"
          },
          "401": {
            "description": "Unauthorized"
          },
          "403": {
            "description": "Forbidden - bidding has begun on the auction."
          },
          "404": {
            "description": "Not found."
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users": {
      "post": {
        "security": [
          {
            "User": []
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/PostUser"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/id"
                }
              }
            }
          },
          "400": {
            "description": "Malformed request"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/{id}": {
      "patch": {
        "security": [
          {
            "User": []
          }
        ],
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {
              "$ref": "#/components/schemas/id"
            }
          }
        ],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/User"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "OK"
          },
          "401": {
            "description": "Unauthorized"
          },
          "404": {
            "description": "Not found."
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Auction": {
        "title": "Auction",
        "type": "object",
        "properties": {
          "categoryId": {
            "type": "integer",
            "format": "int32"
          },
          "title": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "startDateTime": {
            "type": "integer",
            "format": "int32"
          },
          "endDateTime": {
            "type": "integer",
            "format": "int32"
          },
          "reservePrice": {
            "type": "integer",
            "format": "int32"
          },
          "startingBid": {
            "type": "integer",
            "format": "int32"
          }
        }
      },
      "User": {
        "title": "User",
        "type": "object",
        "properties": {
          "username": {
            "type": "string"
          },
          "givenName": {
            "type": "string"
          },
          "familyName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "PostAuction": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/Auction"
          }
        ],
        "required": [
          "categoryId",
          "title",
          "description",
          "startDateTime",
          "endDateTime",
          "reservePrice",
          "startingBid"
        ]
      },
      "PostUser": {
        "type": "object",
        "allOf": [
          {
            "$ref": "#/components/schemas/User"
          }
        ],
        "required": [
          "username",
          "givenName",
          "familyName",
          "email",
          "password"
        ]
      },
      "id": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32",
            "minimum": 0
          }
        }
      }
    },
    "securitySchemes": {
      "User": {
        "type": "apiKey",
        "name": "X-Authorization",
        "in": "header"
      }
    }
  }
}
